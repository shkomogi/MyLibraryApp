<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeeAllActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:id="@+id/seeAll_ic"
            android:src="@drawable/applogo"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="100dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ListofBooks"
            android:text="List of All Books"
            android:textColor="@color/teal_700"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="160dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:id="@+id/bookRecycler"
            android:layout_below="@+id/ListofBooks"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"></androidx.recyclerview.widget.RecyclerView>

       <!-- <ListView
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:id="@+id/listofbooks"
            android:layout_below="@+id/ListofBooks"
            android:layout_marginTop="30dp"/>-->
    </RelativeLayout>

</RelativeLayout>